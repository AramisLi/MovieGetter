<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="bg_main_gray">#eaeff0</color>
    <color name="bg_toolbar">#333A40</color>
    <color name="colorAccent">#FF4081</color>
    <color name="colorPrimary">#4397C0</color>
    <color name="colorPrimaryDark">#4397E4</color>
    <color name="color_user_line">#e4e4e4</color>
    <color name="transparent">#00000000</color>
    <color name="white">#ffffff</color>
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <dimen name="height_dialog">253dp</dimen>
    <dimen name="height_toolbar">42dp</dimen>
    <string name="app_name">AramisBaseLibrary</string>
    <string name="btn_cancel">Cancel</string>
    <string name="btn_gallery">Gallery</string>
    <string name="btn_photo">Camera</string>
    <string name="str_doubleclick_quit">再按一次退出</string>
    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/DialogAnimation_Bottom</item>
    </style>
    <style name="DialogAnimation_Bottom" parent="@android:style/Theme.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_bottom</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_bottom</item>
    </style>
    <style name="Popupwindow">
        <item name="android:windowEnterAnimation">@anim/anim_pop_top_in</item>
        <item name="android:windowExitAnimation">@anim/anim_pop_top_out</item>
    </style>
    <style name="dialog_loading" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 屏幕背景变暗 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 动画 -->
    </style>
    <style name="new_custom_dialog" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 屏幕背景变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 动画 -->
    </style>
    <style name="time_dialog" parent="android:style/Theme.Dialog">
            <item name="android:windowFrame">@null</item>
            <item name="android:windowNoTitle">true</item>
            <item name="android:windowIsFloating">true</item>
            <item name="android:windowContentOverlay">@null</item>
            <item name="android:windowBackground">@color/white</item>
        </style>
    <declare-styleable name="PickerView"><attr format="boolean" name="isLoop"/></declare-styleable>
    <declare-styleable name="TitleDropView">
        <attr format="integer|reference" name="resViewId"/>
    </declare-styleable>
</resources>